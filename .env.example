# =============================================================================
# Momentum PWA - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# All variables listed here should also be set in Netlify Environment Variables

# =============================================================================
# APPLICATION URL (REQUIRED for production)
# =============================================================================
# The deployed URL of your application - used for email links, redirects, etc.
VITE_APP_URL=https://social-momentum.netlify.app

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Frontend variables (exposed to client)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Database connection (for migrations/scripts)
SUPABASE_DB_URL=your_supabase_db_url

# Service role key (for Netlify functions - server-side only, NEVER expose to client)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# MAILJET EMAIL SERVICE (REQUIRED for emails)
# =============================================================================
MailJet_API_Key=your_mailjet_api_key
MailJet_API_Secret=your_mailjet_api_secret
MailJet_From_Email=momentum.pwa@gmail.com

# =============================================================================
# N8N AI WEBHOOK INTEGRATION (REQUIRED for AI features)
# =============================================================================
# Webhook URL for AI-generated task descriptions
N8N_DESCRIPTION_WEBHOOK_URL=your_n8n_description_webhook_url

# Webhook URL for AI project generation
N8N_PROJECT_WEBHOOK_URL=your_n8n_project_webhook_url

# Secret key for authenticating N8N webhook requests
x_momentum_secret=your_webhook_secret

# =============================================================================
# ONESIGNAL PUSH NOTIFICATIONS (REQUIRED for push notifications)
# =============================================================================
# OneSignal App ID (also used in frontend via VITE_ prefix)
ONESIGNAL_APP_ID=your_onesignal_app_id
VITE_ONESIGNAL_APP_ID=your_onesignal_app_id

# OneSignal REST API Key (server-side only, for Netlify functions)
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# =============================================================================
# NEXT.JS COMPATIBILITY (Optional - for Next.js migration)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_APP_URL=https://social-momentum.netlify.app

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================
# Sentry Error Tracking
# VITE_SENTRY_DSN=your_sentry_dsn

# Logging Level (debug, info, warn, error)
VITE_LOG_LEVEL=info
